{
    "name": "goptos-vscode-extension",
    "displayName": "Goptos VS Code Extension",
    "description": "LSP client",
    "version": "0.0.31",
    "publisher": "name",
    "license": "EPL-1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/goptos/vscodeextension"
    },
    "bugs": {
        "url": "https://github.com/goptos/vscodeextension/issues"
    },
    "engines": {
        "vscode": "^1.67.1"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:go"
    ],
    "main": "out/extension",
    "contributes": {
        "languages": [
            {
                "id": "go",
                "aliases": [
                    "go"
                ],
                "extensions": [
                    ".go"
                ],
                "configuration": "./goptos.configuration.json"
            }
        ]
    },
    "devDependencies": {
        "@types/node": "^17.0.45",
        "@types/vscode": "^1.67.0",
        "@vscode/test-electron": "^2.1.3",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "vscode-languageclient": "^8.0.1"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    }
}